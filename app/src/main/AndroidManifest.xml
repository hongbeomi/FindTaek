<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hongbeomi.findtaek">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/find_taek_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/find_taek_icon_round"
        android:supportsRtl="true"
        android:name=".FindTaekApp"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hongbeomi.findtaek.view.ui.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.hongbeomi.findtaek.view.ui.add.AddActivity"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.hongbeomi.findtaek.view.ui.timeline.TimeLineActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>